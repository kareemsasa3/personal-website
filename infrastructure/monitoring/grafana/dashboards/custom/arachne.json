{
    "uid": "arachne-dashboard",
    "title": "Arachne Scraper Overview",
    "tags": [
        "arachne",
        "prometheus"
    ],
    "timezone": "browser",
    "version": 1,
    "schemaVersion": 38,
    "editable": true,
    "refresh": "10s",
    "panels": [
        {
            "type": "graph",
            "title": "Scraping Requests (rate)",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "sum by (domain) (rate(arachne_scraping_requests_total[5m]))",
                    "legendFormat": "{{domain}}"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        },
        {
            "type": "graph",
            "title": "Success vs Failure (rate)",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "sum by (domain) (rate(arachne_scraping_success_total[5m]))",
                    "legendFormat": "success: {{domain}}"
                },
                {
                    "expr": "sum by (domain) (rate(arachne_scraping_failure_total[5m]))",
                    "legendFormat": "failure: {{domain}}"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        },
        {
            "type": "graph",
            "title": "Domain Response Time (p95)",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum(rate(arachne_domain_response_time_seconds_bucket[5m])) by (le, domain))",
                    "legendFormat": "{{domain}} p95"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        },
        {
            "type": "graph",
            "title": "Bytes Scraped (rate)",
            "gridPos": {
                "x": 12,
                "y": 8,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "sum by (domain) (rate(arachne_scraping_bytes_total[5m]))",
                    "legendFormat": "{{domain}}"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        },
        {
            "type": "graph",
            "title": "HTTP Status Codes (rate)",
            "gridPos": {
                "x": 0,
                "y": 16,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "sum by (status_code) (rate(arachne_status_code_total[5m]))",
                    "legendFormat": "{{status_code}}"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        },
        {
            "type": "graph",
            "title": "Circuit Breaker State",
            "gridPos": {
                "x": 12,
                "y": 16,
                "w": 12,
                "h": 8
            },
            "targets": [
                {
                    "expr": "arachne_circuit_breaker_state",
                    "legendFormat": "{{domain}}"
                }
            ],
            "datasource": {
                "type": "prometheus",
                "uid": "prometheus"
            }
        }
    ],
    "templating": {
        "list": [
            {
                "type": "query",
                "name": "domain",
                "datasource": {
                    "type": "prometheus",
                    "uid": "prometheus"
                },
                "query": "label_values(arachne_scraping_requests_total, domain)",
                "includeAll": true,
                "multi": true
            }
        ]
    }
}